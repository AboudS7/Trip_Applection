@model Trip
@*----------------------------------------*@
<div class="card" style=" direction: rtl;">
    <div class="card-body">
        <div class=" d-flex align-items-center text-muted font-weight-light">
            <i class="mdi mdi-airplane-takeoff"> . </i>
            <span>@Model.Catogry.Name </span>
        </div>
        <div class="d-flex">
            <div class="d-flex align-items-center me-4 text-muted font-weight-light">
                <i class=" mdi mdi-earth"> . </i>
                <span> الدولة: @Model.Contry.City.Name </span>
            </div>
            <div class="d-flex align-items-center me-4 text-muted font-weight-light">
                <i class="text-warning mdi mdi-city"> . </i>
                <span> المدينة : @Model.Contry.Name</span>
            </div>
            <div class=" d-flex align-items-center me-4 text-muted font-weight-light">
                <i class="mdi mdi-square-inc-cash"> . </i>
                <span>السعر : $@Model.Price </span>
            </div>
            <div class="d-flex align-items-center text-muted font-weight-light">
                <i class="mdi mdi-clock icon-sm me-2"> . </i>
                <span> تاريخ الرحلة : @Model.Name </span>
            </div>
        </div>
        @if (Model.Imags.Any())
        {
            <div class="row mt-3">
                @foreach (var image in Model.Imags)
                {
                    <div class="col-6 pe-1">

                        <img src="@Url.Content("~/Uploud/Imag/" + image.ImagName)" class="mb-2 mw-100 w-100 rounded" />

                    </div>
                }
                @* <div class="col-6 ps-1">
                    <img src="~/Admin/images/dashboard/img_2.jpg" class="mb-2 mw-100 w-100 rounded" alt="image">
                    <img src="~/Admin/images/dashboard/img_3.jpg" class="mw-100 w-100 rounded" alt="image">
                    </div>*@
            </div>
        }
        <div class="d-flex mt-5 align-items-top">
            <img src="~/Admin/images/faces/face3.jpg" class="img-sm rounded-circle me-3" alt="image">
            <div class="mb-0 flex-grow">
                <h5 class="me-2 mb-2">School Student- Authentication Module.</h5>
                <p class="mb-0 font-weight-light">@Model.Description</p>
            </div>

            <div class="ms-auto">
                <i class="mdi mdi-heart-outline text-muted"></i>
            </div>
            <div class="d-flex  small text-warning mb-2">
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
                <div class="bi-star-fill"></div>
            </div>

        </div>
        <div class="ms-auto">
        <button type="button" class="btn btn-outline btn-icon-text">
            <i class="mdi mdi-file-check btn-icon-prepend"></i> حجز
        </button>
        </div>
    </div>
</div>


